<body>

<div class="container">
  <div class="masthead">
    <nav>
      <ul class="nav nav-justified">
        <li><a href="http://localhost:3000">Inicio </a></li>
        <li><a href="http://localhost:3000/posts/new">Subir Producto</a> %></li>
        <li><a href="http://localhost:3000/login">Login</a></li>
        <li><a href="http://localhost:3000/usuarios/new">Registrarse </a></li>
      </ul>
    </nav>
  </div>

  <!-- Example row of columns -->
  <div class="row">
    <% @posts.each do |post| %>
    <div class="col-lg-4">
      <h2> <%= post.titulo %></h2>
      <% if post.has_photo? %>
          <%= image_tag post.photo_path, size: "300x300" %>
      <% end %>
      <p><a class="btn btn-primary" href="#" role="button">Ver &raquo;</a></p>
    </div>
  <% end %>
  </div>

  <!-- Site footer -->
  <footer class="footer">
    <p>&copy; 2017 GauchinSoft, Inc.</p>
  </footer>

</div> <!-- /container -->


